def binary_search(target1: int,listik1: list[int]):
    '''
    Алгоритм бинарного поиска
    Args:
        target1(int): Число, которое нужно угадать.
        listik1(list): Диапазон чисел. '''
    listik1=sorted(listik1)
    low = 0
    high = len(listik1) - 1
    mid = len(listik1) // 2
    count_attempts=1
    if listik1[mid] == target1:
        return listik1[mid], count_attempts
    else:
        while listik1[mid] != target1 and low <= high:
            if target1 > listik1[mid]:
                low = mid + 1
            else:
                high = mid - 1
            mid = (low + high) // 2
            count_attempts+=1
            if listik1[mid]==target1:
                return listik1[mid], count_attempts
    if low > high:
        return 'Число не найдено'
def slow_search(target2:int,listik2: list[int]):
    '''
    Алгоритм медленного перебора
    Args:
        target2(int): Число, которое нужно угадать.
        listik2(list): Диапазон чисел. 
    '''
    listik2=sorted(listik2)
    nownumber=listik2[0]
    count_attempts=0
    check=0
    for i in range(len(listik2)):
        nownumber = listik2[i]
        count_attempts+=1
        if nownumber==target2:
            return nownumber, count_attempts
            check=1
    if check==0:
        return 'Число не найдено'
    
def guess_number(target: int,listik: list[int],method:str):
    '''
    Используя выбранный алгоритм, отгадывает число.
    Args:
        target(int): Число, которое нужно угадать.
        listik(list): Диапазон чисел.
        method(str): Алгоритм, который будет использоваться для поиска загаданного числа. Или binary_search или slow_search.
    '''
    if method=='binary_search':
        return binary_search(target,listik)

    elif method=="slow_search":
        return slow_search(target,listik)
    else:
        return 'Введён неправильный метод поиска.'
 
import unittest

# Тесты
class TestMath(unittest.TestCase):
    def test_binary(self):
        self.assertEqual(guess_number(25,[23,24,25,26,27],'binary_search'), (25,1))

    def test_binary2(self):
        self.assertEqual(guess_number(30,[23,24,25,26,27],'binary_search'), ('Число не найдено'))

    def test_slow(self):
        self.assertEqual(guess_number(30,[23,24,25,26,27,30],'slow_search'), (30,6))
unittest.main(argv=[''], verbosity=2, exit=False)
